#coding: utf-8

class Funcionario(object):
    def __init__(self,db):
        self.db = db


    def cadastrar(self,dados):    
            conexao = open(self.db,"a")
            conexao.write("%s|%s|%s|%s|%s\n" %(dados["codigoFuncionario"], dados["nome"], dados["endereco"], dados["sexo"], dados["datanasc"]) )
            conexao.close()
        
        
    def consultar(self,dados):
        try:
            linhas = open(self.db,"r").read()
        except:
            return False
            
        for linha in linhas.split("\n"):
            if linha == "":
                break
            
            codigo,nome,endereco,sexo,datanasc = linhas.split("|")
            
            if dados["codigoFuncionario"]==codigo and dados["nome"]==nome:
                return True
                
        return False
