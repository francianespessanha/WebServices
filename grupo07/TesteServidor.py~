class TesteServidor(unittest.TestCase):
    def setUp(self):
        self.func = Funcionario("funcionarios.txt")
        self.dados = {"codigoFuncionario":1, "nome":"Filipe", "endereco":"Arantes", "sexo":"m", "datanascimento":"00/00/00"}
        self.dados11 = {"codigoFuncionario":11, "nome":"Filipe", "endereco":"Arantes", "sexo":"m", "datanascimento":"00/00/00"}

    def teste_consulta_se_ha_funcionario_cadastrado(self):
        self.func.consultarFuncionario(1) |should| equal_to(self.dados)
